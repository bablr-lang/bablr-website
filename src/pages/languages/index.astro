---
import Layout from '../../layouts/Layout.astro'
import LanguageCard from '../../components/LanguageCard.astro'

const response = await fetch('https://api.github.com/orgs/bablr-lang/repos')

const data = await response.json();

const allLangs = data.filter((repo) => repo.name.includes("language-en"));
---

<Layout title="Languages">
	<main>
		<h1> BABLR Languages </h1>
			{allLangs.map((repo) => <LanguageCard 
			href={`languages/${repo.name}`}
			language={repo.name} 
			/>)}
	</main>
</Layout>

<style>
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>